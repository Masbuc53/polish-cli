{
  "vault": {
    "path": "/Users/researcher/ObsidianVault/Research",
    "structure": {
      "documents": "Papers",
      "media": "Figures",
      "code": "Scripts",
      "references": "References"
    }
  },
  "originals": {
    "path": "/Users/researcher/OrganizedFiles/Research",
    "organizationStyle": "date-based",
    "createYearFolders": true,
    "preserveStructure": false
  },
  "sources": [
    {
      "path": "/Users/researcher/Papers",
      "includeSubfolders": true,
      "excludePatterns": ["*.tmp", "*.bak", "*.old"]
    },
    {
      "path": "/Users/researcher/Downloads",
      "includeSubfolders": false,
      "excludePatterns": ["*.tmp", "*.partial"]
    },
    {
      "path": "/Users/researcher/Academic",
      "includeSubfolders": true,
      "excludePatterns": ["*.cache"]
    }
  ],
  "processing": {
    "extractText": true,
    "maxFileSize": "50MB",
    "supportedFormats": [
      "pdf", "txt", "md", "docx", "odt", "rtf", "tex",
      "png", "jpg", "jpeg", "gif", "bmp", "svg", "eps", "tiff",
      "py", "r", "m", "ipynb", "jl",
      "json", "xml", "yaml", "yml", "csv", "tsv", "bib",
      "zip", "tar", "gz", "rar", "7z"
    ]
  },
  "tagging": {
    "maxTags": 12,
    "autoGenerateTypeTags": true,
    "autoGenerateDateTags": true,
    "autoGenerateSourceTags": true,
    "customTagPatterns": {
      "author": "extract from PDF metadata",
      "journal": "extract from filename or content",
      "year": "extract from filename or content",
      "conference": "extract from filename or content",
      "research-area": "machine-learning|deep-learning|nlp|computer-vision|robotics",
      "methodology": "experimental|theoretical|survey|review",
      "status": "read|to-read|in-progress|cited"
    },
    "excludeTags": ["temp", "cache", "tmp", "draft"]
  },
  "api": {
    "mode": "claude-api",
    "timeout": 60000,
    "retries": 3,
    "systemPrompt": "You are analyzing academic research papers. Focus on extracting research topics, methodologies, and academic context. Generate tags that would be useful for a researcher organizing their knowledge base."
  }
}